<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cadastroAluno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Preencha os dados para se cadastrar"
            android:textSize="21dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="7dp"></TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="81dp"
                android:layout_height="101dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/pessoa"></ImageView>

            <EditText
                android:id="@+id/nome"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="91dp"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/sobrenome"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="91dp"
                android:layout_marginTop="55dp"
                android:ems="10"
                android:hint="Sobrenome"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/sobrenome2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:ems="10"
                android:hint="Nome da escola"
                android:inputType="textPersonName" />


        </RelativeLayout>

        <TextView
            android:id="@+id/escolher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Escolha 5 matÃ©rias que deseja se especializar"
            android:textColor="#000000"
            android:layout_margin="5dp"
            android:textSize="18dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="501dp" />

    </LinearLayout>

</ScrollView>